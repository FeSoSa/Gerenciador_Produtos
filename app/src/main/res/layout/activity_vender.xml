<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.vender">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listaVenda"
        android:layout_width="match_parent"
        android:layout_height="635dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/list_item_vender" />

    <TextView
        android:id="@+id/precoTotal"
        android:layout_width="125dp"
        android:layout_height="95dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="R$"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/voltar"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/listaVenda" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="85dp"
        android:layout_height="95dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="PreÃ§o:"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listaVenda"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/vender"
        android:layout_width="102dp"
        android:layout_height="95dp"
        android:backgroundTint="#4CAF50"
        android:text="Vender"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listaVenda" />

    <Button
        android:id="@+id/voltar"
        android:layout_width="102dp"
        android:layout_height="95dp"
        android:backgroundTint="#FF1100"
        android:text="Voltar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/vender"
        app:layout_constraintTop_toBottomOf="@+id/listaVenda" />

</androidx.constraintlayout.widget.ConstraintLayout>